<!DOCTYPE html>
<html>
  <head>
    <title>RailsSimpleAirbnb</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar d-flex justify-content-between">
      <h3><%= link_to 'Simple Airbnb', flats_path %></h3>
      <div class="d-flex">
        <form class="form-inline">
          <input class="form-control" name="query" type="search" placeholder="Search" value="">
          <button class="btn btn-outline-dark ml-2" type="submit">Search</button>
        </form>
        <%= link_to 'Add flat', new_flat_path, class: "btn btn-outline-dark ml-2" %>
      </div>
    </div>
    <%= yield %>
  </body>
</html>
